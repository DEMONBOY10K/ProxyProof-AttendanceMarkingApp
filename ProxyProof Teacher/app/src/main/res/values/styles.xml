<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>

        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/b2scam</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimary</item>
    </style>
    <style name="app_theme.dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/bg_color</item>
        <item name="android:colorForeground">@color/bg_color</item>
        <item name="android:textColor">@color/bg_color</item>
    </style>
    <style name="ChooseFiles" parent="android:Theme.Material" />

    <style name="ScheduleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ScheduleActivityTheme" parent="Theme.MaterialComponents.Light">
        <!-- AppBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="iconColor">@color/black</item>
        <item name="editTextCardBackground">@color/grey200</item>

        <item name="android:windowAnimationStyle">@style/Animation.Activity.Transition</item>
        <item name="divLineBackground">@color/googleAppLightTheme_colorDivLine</item>
    </style>
    <style name="AppTheme_NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/darkMode_colorAccent</item>
    </style>

    <style name="LightTheme_NoActionBar" parent="LightTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Animation.Activity.Transition" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_close_exit</item>
    </style>

    <style name="DivLine">
        <item name="android:background">?attr/divLineBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DivLine.Widget" parent="DivLine">
        <item name="android:layout_height">4dp</item>
    </style>
    <style name="ThemeOverlay.Course.AppWidgetContainer" parent="">
        <!--        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>-->
        <!--        <item name="appWidgetTextColor">@color/light_blue_50</item>-->
        <item name="appWidgetBackgroundColor">@color/white</item>
        <item name="appWidgetTextColor">@color/black</item>
        <item name="divLineBackground">@color/googleAppLightTheme_colorDivLine</item>

        <!-- For calendar and map icon -->
        <item name="iconColor">@color/black</item>
    </style>
</resources>
